<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bubble_layout_part"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/appBar"
    android:layout_marginStart="40dp"
    android:layout_marginEnd="6dp"
    android:orientation="vertical"
    android:padding="7dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_small_profile"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        android:padding="3dp"
        android:src="@drawable/ic_baseline_account_circle_24" />

    <ImageView
        android:id="@+id/iv_blueMark"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_alignEnd="@id/iv_small_profile"
        android:layout_alignBottom="@id/iv_small_profile"
        android:contentDescription="TODO"
        android:background="@drawable/bg_circle_white"
        android:src="@drawable/ic_baseline_check_circle_24" />

    <LinearLayout

        android:id="@+id/bubble_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@id/tv_react"
        android:layout_toRightOf="@id/iv_small_profile"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:id="@+id/tv_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/poppins_regular"
            android:text="Kaung Htet Tin"
            android:textColor="#8E8E8E"
            android:textSize="11sp" />

        <TextView

            android:id="@+id/tv_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:autoLink="all"
            android:fontFamily="@font/poppins_medium"
            android:linksClickable="true"
            android:text="This video is so cool"
            android:textColor="@color/textPrimary"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_readmore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:fontFamily="@font/poppins_semibold"
            android:text="Read more.."
            android:textColor="#8E8E8E"
            android:textSize="11sp" />


        <ImageView
            android:id="@+id/iv_main"
            android:layout_width="190dp"
            android:layout_height="210dp"
            android:background="@drawable/rounded_outline"
            android:scaleType="centerCrop" />

    </LinearLayout>


    <TextView
        android:id="@+id/tv_react"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/ic_comment_normal_react"
        android:layout_alignParentEnd="true"
        android:layout_margin="4dp"
        android:fontFamily="@font/poppins_medium"
        android:textSize="11sp"
        android:text="1"
        android:padding="4dp"
        android:gravity="center"
        android:textColor="#FF5157" />

    <TextView
        android:id="@+id/tv_reply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bubble_layout"
        android:layout_gravity="end"
        android:layout_toEndOf="@id/tv_time"
        android:fontFamily="@font/poppins_semibold"
        android:text="Reply"
        android:textColor="#8E8E8E"
        android:textSize="11sp"
        android:layout_marginStart="15dp"/>

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bubble_layout"
        android:layout_alignStart="@id/bubble_layout"
        android:layout_marginBottom="5dp"
        android:textColor="#8E8E8E"
        android:textSize="11sp"
        android:fontFamily="@font/poppins_regular"
        />

</RelativeLayout>