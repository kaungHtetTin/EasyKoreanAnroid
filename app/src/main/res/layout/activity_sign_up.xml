<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/side_nav_bar">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_login"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:padding="10dp"
        android:gravity="center"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Create account and join to"
                android:textSize="13sp"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/calamus_education"
                android:textSize="20sp"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:layout_below="@id/tv1"/>
        </RelativeLayout>

        <ProgressBar
            android:layout_marginTop="10dp"
            android:id="@+id/pb_loading"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="@drawable/bg_progressbar"
            android:padding="5dp"/>

        <ImageView
            android:layout_width="120dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:layout_height="120dp"
            android:src="@drawable/ic_feather"
            android:contentDescription="TODO" />

        <EditText
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="5dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:drawablePadding="8dp"
            android:background="@drawable/bg_comment_enter_text"
            android:layout_marginTop="10dp"
            android:hint="Enter Your Name"/>

        <EditText
            android:id="@+id/et_phone"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="5dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:drawablePadding="8dp"
            android:background="@drawable/bg_comment_enter_text"
            android:layout_marginTop="10dp"
            android:inputType="phone"
            android:hint="Phone number( Type in english)"/>

        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="5dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:drawablePadding="8dp"
            android:background="@drawable/bg_comment_enter_text"
            android:layout_marginTop="10dp"
            android:inputType="textPassword"
            android:hint="Enter your password"/>

        <Button
            android:id="@+id/bt_SignUp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:textColor="@android:color/white"
            android:text="Create Account"
            android:background="@drawable/bg_button"/>

        <TextView
            android:id="@+id/tv_error"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="#F00"/>

        <TextView
            android:id="@+id/tv_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="25dp"
            android:text=" Already Registered? Log In"
            android:padding="5dp"
            android:gravity="center"
            android:background="@drawable/bg_corner_blue"
            android:textColor="@color/colorAccent"
            app:drawableStartCompat="@drawable/ic_baseline_login_24" />

    </LinearLayout>

</LinearLayout>