<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    app:cardElevation="1dp"
    app:cardCornerRadius="2dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:id="@+id/noti_card">

    <com.facebook.shimmer.ShimmerFrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/shimmer_view_container">

        <RelativeLayout
            android:padding="15dp"
            android:layout_width="200dp"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_profile"
                android:layout_centerHorizontal="true"
                android:layout_width="150dp"
                android:cropToPadding="true"
                android:scaleType="centerCrop"
                android:background="@drawable/rounded_outline"
                android:layout_height="150dp"/>

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_profile"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_toStartOf="@id/tv_addFri"
                android:layout_alignParentStart="true"
                android:layout_marginTop="10dp"
                android:text="Kaung Htet Tin"/>

            <TextView
                android:id="@+id/tv_addFri"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:drawableTopCompat="@drawable/add_friend"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/iv_profile"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/tv_reqFir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:drawableTopCompat="@drawable/follow_friend"
                android:layout_alignParentEnd="true"
                android:visibility="gone"
                android:layout_below="@id/iv_profile"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/tv_limit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:drawableTopCompat="@drawable/ic_friend_limit"
                android:layout_alignParentEnd="true"
                android:visibility="gone"
                android:layout_below="@id/iv_profile"
                android:layout_marginTop="10dp"/>

        </RelativeLayout>

    </com.facebook.shimmer.ShimmerFrameLayout>

</androidx.cardview.widget.CardView>