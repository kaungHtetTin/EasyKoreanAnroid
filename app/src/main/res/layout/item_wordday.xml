<?xml version="1.0" encoding="utf-8"?>
    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="2dp"
        app:cardElevation="1dp"
        android:id="@+id/card_View">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:clipToPadding="false"
            android:elevation="3dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_date"
                android:background="@color/colorAccent"
                android:padding="5dp"
                android:elevation="5dp"
                android:textColor="@android:color/white"
                android:layout_alignParentEnd="true"/>

            <TextView
                android:id="@+id/tv_saveList"
                android:text="SavedList"
                android:layout_width="90dp"
                android:padding="5dp"
                android:gravity="center"
                android:textColor="@color/vk_black"
                android:layout_above="@id/tv_save"
                android:layout_alignParentEnd="true"
                android:elevation="5dp"
                android:layout_marginBottom="1dp"
                android:background="@drawable/bg_circle_light_blue"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_save"
                android:text="Save"
                android:layout_width="90dp"
                android:padding="5dp"
                android:layout_alignParentEnd="true"
                android:elevation="5dp"
                android:layout_marginTop="3dp"
                android:layout_above="@id/tv_main"
                android:gravity="center"
                android:textColor="@color/vk_black"
                android:background="@drawable/bg_circle_light_blue"
                android:layout_height="wrap_content"/>


            <ImageView
                android:id="@+id/iv_word_of_the_day"
                android:layout_width="200dp"
                android:layout_height="120dp"
                android:contentDescription="TODO" />


            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:id="@+id/tv_main"
                android:background="#FF5722"
                android:singleLine="true"
                android:textIsSelectable="true"
                android:padding="5dp"
                android:textColor="@android:color/white"
                android:layout_below="@id/iv_word_of_the_day"
                android:layout_alignParentStart="true"/>

            <TextView
                android:paddingTop="5dp"
                android:textIsSelectable="true"
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_example"
                android:layout_below="@id/tv_main"/>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>