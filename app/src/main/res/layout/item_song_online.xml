<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardBackgroundColor="#203153"
    app:cardCornerRadius="2dp"
    app:cardElevation="1dp"
    android:id="@+id/card_View">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_player_gradient">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="#92454545"
            android:scaleType="centerCrop"
            android:src="@drawable/bg_music"
            android:id="@+id/songImage"
            android:layout_gravity="center_horizontal"
            android:contentDescription="TODO" />


        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:padding="5dp"
            android:layout_toEndOf="@id/songImage"/>

        <TextView
            android:id="@+id/tv_artist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@android:color/white"
            android:padding="5dp"
            android:layout_toEndOf="@id/songImage"
            android:layout_below="@id/tv_title"/>

        <TextView
            android:id="@+id/tv_drama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@android:color/white"
            android:layout_marginStart="5dp"
            android:text="this is drama"
            android:layout_toEndOf="@id/songImage"
            android:layout_below="@id/tv_artist"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_react"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="15dp"
            app:cardCornerRadius="7dp"
            app:cardElevation="4dp"
            android:layout_below="@id/songImage"
            app:cardBackgroundColor="@color/purple_700"
            android:layout_margin="10dp"
            android:layout_alignParentStart="true">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:padding="3dp">
                <ImageView
                    android:id="@+id/iv_react"
                    android:layout_width="25dp"
                    android:layout_height="25dp"/>
                <TextView
                    android:id="@+id/tv_reactCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:layout_gravity="center"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <ImageView
            android:id="@+id/iv_downloadCheck"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_toEndOf="@id/songImage"
            android:layout_below="@id/tv_drama"
            android:layout_margin="5dp"
            android:src="@drawable/ic_downloaded"/>

        <TextView
            android:id="@+id/tv_downloadCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:textColor="#aaa"
            android:textStyle="italic"
            android:layout_alignTop="@id/card_react"
            android:layout_alignBottom="@id/card_react"
            android:layout_alignParentEnd="true"
            android:gravity="center"
            android:text="1k downloads"/>


    </RelativeLayout>

</androidx.cardview.widget.CardView>