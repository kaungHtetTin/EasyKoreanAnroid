<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_margin="5dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_react"
        android:layout_width="65dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:drawablePadding="4dp"
        android:textColor="@color/white"
        android:fontFamily="@font/poppins_medium"
        android:textSize="13sp"
        android:text="256"
        app:drawableStartCompat="@drawable/ic_song_love_react"/>

    <TextView
        android:id="@+id/tv_downloadCount"
        android:layout_width="65dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/card_View"
        android:drawablePadding="4dp"
        android:fontFamily="@font/poppins_medium"
        android:gravity="center_vertical"
        android:textColor="@color/white"
        android:textSize="13sp"
        app:drawableStartCompat="@drawable/ic_song_not_downloaded" />


    <androidx.cardview.widget.CardView
        android:layout_width="139dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        app:cardElevation="1dp"
        android:layout_below="@id/tv_react"
        android:id="@+id/card_View">

        <RelativeLayout
            android:layout_width="139dp"
            android:layout_height="181dp"
            android:background="@drawable/bg_player_gradient">

            <ImageView
                android:layout_width="139dp"
                android:layout_height="181dp"
                android:background="#92454545"
                android:scaleType="centerCrop"
                android:src="@drawable/bg_music"
                android:id="@+id/songImage"
                android:layout_gravity="center_horizontal"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                android:contentDescription="TODO" />

            <TextView
                android:id="@+id/tv_info_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:padding="4dp"
                android:text="Stay with me"
                android:background="#E6DCDCDC"
                android:textSize="11sp"
                android:fontFamily="@font/poppins_medium"
                android:textColor="#403F3F" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>