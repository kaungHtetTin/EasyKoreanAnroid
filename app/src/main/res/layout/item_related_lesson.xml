<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/layoutRelatedLesson"
    android:background="@color/appBar"
    android:padding="10dp">

    <ImageView
        android:id="@+id/iv"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/bg_related_video_image"/>

    <TextView
        android:id="@+id/tv_lesson_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_medium"
        android:paddingTop="4dp"
        android:text="Noun and Pronoun"
        android:textColor="@color/colorBlack1"
        android:textSize="15sp"
        app:layout_constraintEnd_toStartOf="@+id/ib_download"
        app:layout_constraintStart_toEndOf="@+id/iv_learned"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_learned"
        android:layout_width="15dp"
        android:layout_height="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_lesson_title"
        app:layout_constraintStart_toStartOf="@+id/guideline6"
        app:layout_constraintTop_toTopOf="@+id/tv_lesson_title"
        app:srcCompat="@drawable/ic_learned_related_lesson" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="60dp" />

    <ImageView
        android:id="@+id/iv_duration"
        android:layout_width="21dp"
        android:layout_height="18dp"
        android:src="@drawable/ic_lesson_duraction_black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline6" />

    <TextView
        android:id="@+id/tv_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:fontFamily="@font/poppins_medium"
        android:textColor="@color/colorNameBlack"
        android:textSize="11sp"
        android:text="16 min"
        app:layout_constraintBottom_toBottomOf="@+id/iv_duration"
        app:layout_constraintStart_toEndOf="@+id/iv_duration"
        app:layout_constraintTop_toTopOf="@+id/iv_duration" />

    <ImageButton
        android:id="@+id/ib_download"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/bg_transparent"
        android:elevation="5dp"
        android:src="@drawable/ic_video_download"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/ibt_play"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/bg_transparent"
        android:elevation="5dp"
        android:visibility="gone"
        android:src="@drawable/ic_video_play_for_lesson_list"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/iv_video_circle"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_video"
        app:layout_constraintBottom_toBottomOf="@+id/iv"
        app:layout_constraintEnd_toEndOf="@+id/iv"
        app:layout_constraintStart_toStartOf="@+id/iv"
        app:layout_constraintTop_toTopOf="@+id/iv" />

    <ImageView
        android:id="@+id/iv_lock"
        android:layout_width="15dp"
        android:layout_height="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_video_circle"
        app:layout_constraintEnd_toEndOf="@+id/iv"
        app:srcCompat="@drawable/ic_baseline_lock_24" />

</androidx.constraintlayout.widget.ConstraintLayout>