<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="5dp"
    android:padding="3dp"
    android:foreground="?android:attr/selectableItemBackground"
    tools:targetApi="m">

    <com.facebook.shimmer.ShimmerFrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/shimmer_view_container">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/card_videoThumb"
                android:layout_width="100dp"
                android:layout_height="75dp"
                app:cardCornerRadius="7dp"
                android:layout_margin="7dp"
                app:cardElevation="4dp"
                android:background="@android:color/white">

                <ImageView
                    android:id="@+id/lessonItemIv1"
                    android:layout_width="100dp"
                    android:layout_height="75dp"
                    android:scaleType="centerCrop"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_feather"/>

                <ImageView
                    android:id="@+id/iv_video_circle"
                    android:src="@drawable/ic_play_circle_outline_black_24dp"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"/>

            </androidx.cardview.widget.CardView>

            <TextView
                android:padding="7dp"
                android:id="@+id/lessonItemTv21"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:layout_toEndOf="@id/card_videoThumb"
                android:layout_toStartOf="@id/ib_download"
                android:textSize="16sp"/>

            <ImageButton
                android:id="@+id/ib_download"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentEnd="true"
                android:background="@drawable/bg_circle_light_blue"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="7dp"
                android:layout_alignParentTop="true"
                android:elevation="5dp"
                android:src="@drawable/ic_download"/>


            <TextView
                android:padding="7dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:id="@+id/lessonItemTv11"
                android:layout_toEndOf="@id/card_videoThumb"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/lessonItemTv21"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"/>

        </RelativeLayout>
    </com.facebook.shimmer.ShimmerFrameLayout>
</LinearLayout>