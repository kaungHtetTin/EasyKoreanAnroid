<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/msg_time"
        android:textColor="#000"
        android:padding="2dp"
        android:text="123"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:textSize="12sp"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="3dp"
        android:id="@+id/iv_message_profile"
        android:layout_below="@id/msg_time"
        android:src="@drawable/ic_baseline_account_circle_24"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="4dp"
        android:layout_marginStart="8dp"
        android:id="@+id/bubble_layout_part"
        android:layout_below="@id/msg_time"
        android:layout_toEndOf="@id/iv_message_profile"
        android:layout_alignParentEnd="true"
        android:clipToPadding="false">

        <LinearLayout

            android:id="@+id/bubble_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="right"
            android:background="@drawable/my_msg"
            android:layout_toStartOf="@id/iv_seen">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/message_body"
                android:textColor="#000"
                android:padding="10dp"
                android:textSize="16sp"
                android:linksClickable="true"
                android:autoLink="all"
                android:textIsSelectable="true"
                android:visibility="gone"
                />

            <androidx.cardview.widget.CardView
                android:id="@+id/iv_card"
                android:layout_width="250dp"
                android:layout_height="270dp"
                app:cardCornerRadius="8dp"
                android:layout_margin="5dp"
                android:elevation="10dp">
                <ImageView
                    android:id="@+id/iv_main"
                    android:layout_width="250dp"
                    android:layout_height="270dp"
                    android:scaleType="centerCrop"
                    android:contentDescription="TODO"/>
            </androidx.cardview.widget.CardView>


        </LinearLayout>

        <ImageView
            android:id="@+id/iv_seen"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_sent"
            android:layout_alignParentEnd="true"
            android:layout_alignBottom="@id/bubble_layout"
            android:contentDescription="TODO" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/tv_received"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bubble_layout_part"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="10dp">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="Received"
            android:layout_marginEnd="10dp"
            />

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_seen"
            android:contentDescription="TODO" />
        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_seen"
            android:contentDescription="TODO" />

    </LinearLayout>



</RelativeLayout>
