<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="#203153"
    android:padding="5dp"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_player_gradient">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="#92454545"
            android:scaleType="centerCrop"
            android:src="@drawable/bg_music"
            android:id="@+id/songImage"
            android:layout_gravity="center_horizontal"
            android:contentDescription="TODO" />


        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:padding="7dp"
            android:layout_toEndOf="@id/songImage"
            android:text="Stay with me"/>

        <TextView
            android:id="@+id/tv_artist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@android:color/white"
            android:padding="7dp"
            android:text="Black Pink"
            android:layout_toEndOf="@id/songImage"
            android:layout_below="@id/tv_title"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_react"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="15dp"
            app:cardCornerRadius="7dp"
            app:cardElevation="4dp"
            android:layout_below="@id/songImage"
            app:cardBackgroundColor="@color/purple_700"
            android:layout_margin="10dp"
            android:layout_alignParentStart="true">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:padding="3dp">
                <ImageView
                    android:id="@+id/iv_react"
                    android:layout_width="25dp"
                    android:layout_height="25dp"/>
                <TextView
                    android:id="@+id/tv_reactCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:layout_gravity="center"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <Button
            android:id="@+id/bt_download"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/card_react"
            android:layout_alignBottom="@id/card_react"
            android:background="@drawable/bg_corner_green"
            android:layout_alignParentEnd="true"
            android:text="Download"
            android:layout_marginEnd="7dp"
            android:textColor="#0E42FD"
            android:layout_marginStart="10dp"/>

        <Button
            android:id="@+id/bt_play"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_corner_green"
            android:layout_toStartOf="@id/bt_download"
            android:text="Play"
            android:layout_marginEnd="7dp"
            android:textColor="#0E42FD"
            android:layout_marginStart="10dp"
            android:layout_alignTop="@id/card_react"
            android:layout_alignBottom="@id/card_react"
            android:layout_below="@id/songImage"/>

        <ImageView
            android:id="@+id/iv_downloadCheck"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_toEndOf="@id/songImage"
            android:layout_alignBottom="@id/songImage"
            android:layout_marginStart="7dp"
            android:visibility="gone"
            android:src="@drawable/ic_downloaded"/>

        <ImageView
            android:id="@+id/iv_isPlaying"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_toEndOf="@id/songImage"
            android:layout_alignBottom="@id/songImage"
            android:layout_marginStart="7dp"
            android:visibility="gone"
            android:src="@drawable/ic_baseline_campaign_24"/>

        <TextView
            android:id="@+id/tv_downloadCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/songImage"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="7dp"
            android:textColor="#aaa"
            android:textStyle="italic"
            android:text="1k downloads"/>

        <ProgressBar
            android:id="@+id/pb_download"
            android:layout_width="100dp"
            android:layout_height="5dp"
            android:progress="0"
            android:layout_marginBottom="5dp"
            android:visibility="gone"
            android:layout_toStartOf="@id/tv_downloadCount"
            android:layout_alignBottom="@id/songImage"
            android:layout_marginStart="7dp"
            style="@android:style/Widget.ProgressBar.Horizontal" />


        <ScrollView
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/bt_play"
            android:layout_above="@id/web_adview">
            <TextView
                android:id="@+id/tv_lyrics"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:gravity="center"
                android:padding="10dp"
                android:text="... Requesting Lyrics ..."/>
        </ScrollView>

        <com.google.android.gms.ads.AdView
            xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:id="@+id/web_adview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            ads:adSize="BANNER"
            ads:adUnitId="ca-app-pub-2472405866346270/2510952382"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:visibility="gone"/>

    </RelativeLayout>

</RelativeLayout>

