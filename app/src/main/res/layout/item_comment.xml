<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="7dp"
    android:background="@android:color/white"
    android:layout_marginBottom="5dp"
    android:id="@+id/bubble_layout_part">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_small_profile"
        android:src="@drawable/ic_baseline_account_circle_24"
        android:padding="3dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="4dp"/>

    <ImageView
        android:id="@+id/iv_blueMark"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_alignBottom="@id/iv_small_profile"
        android:layout_alignEnd="@id/iv_small_profile"
        android:src="@drawable/ic_baseline_check_circle_24"
        android:contentDescription="TODO" />


    <LinearLayout

        android:id="@+id/bubble_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical"
        android:layout_toRightOf="@id/iv_small_profile"
        android:background="@drawable/other_msg">

    <TextView
        android:id="@+id/tv_cmt1"
        android:text="Kaung Htet Tin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:layout_marginBottom="5dp"/>

    <TextView

        android:id="@+id/tv_cmt2"
        android:textColor="@android:color/black"
        android:text="This video is so cool"
        android:layout_width="wrap_content"
        android:layout_marginBottom="5dp"
        android:linksClickable="true"
        android:autoLink="all"
        android:textSize="14sp"
        android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_readmore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Read more.."
            android:layout_gravity="end"/>


        <ImageView
            android:id="@+id/iv_main"
            android:layout_width="190dp"
            android:layout_height="210dp"
            android:background="@drawable/rounded_outline"
            android:scaleType="centerCrop"
            android:contentDescription="TODO"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_reply"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_below="@id/bubble_layout"
        android:layout_toEndOf="@id/tv_cmt3"
        android:layout_marginStart="15dp"
        android:src="@drawable/ic_baseline_reply_24"/>

    <ImageView
        android:id="@+id/iv_react"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/ic_normal_react"
        android:layout_toEndOf="@id/iv_reply"
        android:layout_marginStart="15dp"
        android:layout_below="@id/bubble_layout"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_reactCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="15dp"
        app:cardCornerRadius="7dp"
        app:cardElevation="4dp"
        android:background="@android:color/white"
        android:layout_toEndOf="@id/iv_react"
        android:layout_below="@id/iv_react"
        android:layout_marginTop="-15dp"
        android:visibility="gone"
        android:layout_marginBottom="5dp">
        <TextView
            android:id="@+id/tv_reactCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_cmt3"
        android:textSize="12sp"
        android:layout_marginBottom="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/bubble_layout"
        android:layout_marginStart="10dp"
        android:layout_below="@id/bubble_layout"/>
</RelativeLayout>