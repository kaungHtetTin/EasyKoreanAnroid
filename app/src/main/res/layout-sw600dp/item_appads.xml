<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="6dp"
    android:layout_marginEnd="6dp"
    android:layout_marginBottom="10dp">

    <ImageView
        android:id="@+id/iv_appCover"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:scaleType="centerCrop" />
    <TextView
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:textSize="12sp"
        android:text="Ad"
        android:gravity="center"
        android:padding="2dp"
        android:background="#ffcc66"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#1B2730"
        android:layout_below="@id/iv_appCover">

        <ImageView

            android:id="@+id/iv_appIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_margin="5dp" />

        <TextView
            android:id="@+id/tv_appName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:fontFamily="@font/poppins_medium"
            android:layout_toStartOf="@id/tv_action"
            android:layout_alignTop="@id/iv_appIcon"
            android:layout_toEndOf="@id/iv_appIcon"/>

        <TextView
            android:id="@+id/tv_appDes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_appName"
            android:layout_toEndOf="@id/iv_appIcon"
            android:layout_toStartOf="@id/tv_action"
            android:fontFamily="@font/poppins_light"
            android:textColor="#44CB6D"
            android:textSize="11sp" />


        <TextView
            android:id="@+id/tv_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_margin="5dp"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="#4B93FF"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>

    </RelativeLayout>


</RelativeLayout>

