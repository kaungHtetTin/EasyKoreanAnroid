<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">#ddd</item>
        <item name="colorAccent">@color/colorThemeLight</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:textColorPrimary">@color/colorBlack1</item>

    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="Theme.Toolbar.NoActionBar" parent="Theme.AppCompat.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">#ddd</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:textColorPrimary">@color/colorAccent</item>
    </style>

    <style name="loading" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorAccent">@android:color/white</item>
    </style>


    <!-- style for the action bar backgrounds -->


    <!-- Text -->
    <style name="MyTheme.ActionBar.TitleTextStyle" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>


    <style name="AppTheme.AdAttribution">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">12sp</item>
        <item name="android:text">@string/ad_attribution</item>
        <item name="android:background">#FFCC66</item>
        <item name="android:width">15dp</item>
        <item name="android:height">15dp</item>
    </style>

    <style name="CollapsedAppBar" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorBlack1</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:layout_marginStart">25dp</item>
        <item name="android:textSize">18sp</item>


    </style>

    <style name="ExpandedAppBar" parent="@android:style/TextAppearance">
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/colorBlack1</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>

    </style>

    <style name="ExpandedAppBarFragmentOne" parent="@android:style/TextAppearance">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/colorBlack1</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>

    </style>

    <style name="BottomNavigationViewTextStyle">
        <item name="android:textColor">@color/colorThemeLight</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">9sp</item>

    </style>

    <style name="BottomNavigationViewTextStyleInActive">
        <item name="android:textColor">#888</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">9sp</item>
    </style>

    <style name="BottomNavigationViewTextChattingStyle">
        <item name="android:textColor">#4B93FF</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">11sp</item>

    </style>

    <style name="TabBarLayoutTextStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="SheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <!--<item name="android:windowCloseOnTouchOutside">false</item>-->
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorBackground">     @android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.3</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
    </style>


    <style name="MenuText">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textColor">@color/colorBlack1</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>

    </style>


</resources>
